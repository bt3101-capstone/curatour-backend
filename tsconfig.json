{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "declaration": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "lib",
    "src/**/scripts",
    "src/*/public",
    "node_modules",
    "scripts",
    "test/debug",
    "test/helpers/scripts",
    "test",
    "**/node_modules/*"
  ]
}